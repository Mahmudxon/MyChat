<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:cardBackgroundColor="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Your number"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <com.hbb20.CountryCodePicker
        android:id="@+id/cpp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ccp_showFullName="true"
        app:ccp_showPhoneCode="false"
        app:ccp_showNameCode="false"
        app:ccp_contentColor="@color/colorPrimary"
        app:ccp_defaultNameCode="uz"
        app:ccp_textGravity="LEFT"
        app:ccp_textSize="24sp"
        />


    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:enabled="false"
            android:maxLines="1"
            android:text="+998"
            android:id="@+id/code_county"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:inputType="phone"
            android:maxLines="1"
            android:id="@+id/number"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:padding="10dp"
        android:textSize="18sp"
        android:text="@string/description_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:enabled="false"
        android:id="@+id/btn_continue"
        android:text="Continue"
        android:layout_margin="16dp"
        android:textSize="24sp"
        android:textColor="#fff"
        android:background="@drawable/continue_button_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>